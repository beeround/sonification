extends ../layout/structure

block content
  .row
    .col-md-6
      img(src="/img/socialsound_logo.png", style="width:100%; margin-top: 160px")

    .col-md-6.col-md-offset-2
      .col-md-10.col-md-offset-2
        h3(style="margin-left:20px; margin-bottom:30px") Login

        form.form-horizontal(method='POST', action="/login")
          input(type='hidden', name='_csrf', value=_csrf)
          .form-group
            .col-sm-12
              input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus, required)
          .form-group
            .col-sm-12
              input.form-control(type='password', name='password', id='password', placeholder='Password', required)
          .form-group
            .col-sm-12
              button.col-sm-6.btn.btn-primary(type='submit')
                //i.fa.fa-user
                | Login

          .form-group(style="margin-top:40px")
            .col-sm-12
              a.btn.btn-block.btn-empty(href='/auth/facebook')
                | Login in with Facebook
              a.btn.btn-block.btn-empty(href='/auth/twitter')
                | Login in with Twitter
              a.btn.btn-block.btn-empty(href='/auth/google')
                | Login in with Google

          .form-group(style="margin-top:70px")
            .col-sm-12
              a(href='/signup')
                //i.fa.fa-user
                | Noch kein Account? Jetzt registrieren