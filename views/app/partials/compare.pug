                                        img.profile(ng-src="{{search.picture.data.url}}")
                                        | {{search.name}}
                                    p.card-text {{search.category}}
                                    p.card-text {{search.fan_count}} Likes


                                    span.btn.btn-primary.btn-sm(ng-click="changeFeed(search.id, 'right')") Auswählen



            .row.compare-results
                .col-md-12.search-results(ng-show="dataRight")
                    .row
