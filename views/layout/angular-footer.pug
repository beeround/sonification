footer.ng-footer
    .container
        .row
            .col-md-3
                .row
                    .col-md-12(style="margin-top:7px")
                        ul.footernavi
                            li
                                i.icon.love(ng-click="sonifyByReaction('love')")
                            li
                                i.icon.haha(ng-click="sonifyByReaction('haha')")
                            li
                                i.icon.wow(ng-click="sonifyByReaction('wow')")
                            li
                                i.icon.sad(ng-click="sonifyByReaction('sad')")
                            li
                                i.icon.angry(ng-click="sonifyByReaction('angry')")

            .col-md-4
                .row
                    .col-md-5
                        form.form-horizontal(style="margin-top:-7px")
                            fieldset
                                select#selectbasic.form-control.selectbox(name='selectbasic' ng-change="changeSelectedSound()" ng-model="data.selectedSound")
                                    option(ng-repeat="sound in sounds" ng-value="sound.name" title="{{sound.description}}") {{sound.name}}
                    .col-md-7(style="margin-top:5px")
                        label.small Höchster Wert abspielen
                            input(type='checkbox', ng-model='playSettings.highest', style="margin-left:10px")

            .col-md-5
                ul.footernavi.pull-right
                    li
                        a.span.small(href="/imprint") © 2017 SonificationApp. All Rights Reserved
                    li.text-right
                        a.small(href="/imprint") Impressum

.lightbox(ng-click="stopPlaying()",ng-show="currentPlay.sound", ng-class="{'love': currentPlay.sound == 'love', 'haha': currentPlay.sound == 'haha', 'wow': currentPlay.sound == 'wow', 'sad': currentPlay.sound == 'sad', 'angry': currentPlay.sound == 'angry'}")

    .container.text-center
        .emoji.icon(ng-class="currentPlay.sound")
        h1(count-to='{{currentPlay[currentPlay.sound]}}', value='0', duration='1')
        h2 {{currentPlay.sound}}



