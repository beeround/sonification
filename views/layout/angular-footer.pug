footer.ng-footer
  .container
    .row

      .col-md-5
       ul.footernavi
          li
            i.fa.fa-stop-circle.icon(ng-click="stopPlaying()")
          li
            i.icon.love(ng-click="sonifyByReaction('love')")
          li
            i.icon.haha(ng-click="sonifyByReaction('haha')")
          li
            i.icon.wow(ng-click="sonifyByReaction('wow')")
          li
            i.icon.sad(ng-click="sonifyByReaction('sad')")
          li
            i.icon.angry(ng-click="sonifyByReaction('angry')")
      .col-md-2
        form.form-horizontal
          fieldset
            select#selectbasic.form-control.selectbox(name='selectbasic' ng-change="changeSelectedSound()" ng-model="data.selectedSound")
              option(ng-repeat="sound in sounds" ng-value="sound.name") {{sound.name}}
      .col-md-5
        ul.footernavi.pull-right
          li
